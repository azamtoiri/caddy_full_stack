:80 {

  # Django backend
  handle /api/* {
    reverse_proxy backend:8000
  }
  
  handle /admin/* {
    reverse_proxy backend:8000
  }

  handle /static/* {
    reverse_proxy backend:8000
  }

  handle /media/* {
    reverse_proxy backend:8000
  }

  handle {
    reverse_proxy frontend:80
    header Cache-Control "no-store"
    try_files {path} /index.html
  }
}
